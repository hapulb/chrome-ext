{
  "name": "chrome-ext",
  "version": "1.0.0",
  "description": "Build an Extension!",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content_script.js"]
  }],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "img/bot_32.png",
      "64": "img/bot_64.png"
    }
  },
  "devtools_page": "devtool.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
